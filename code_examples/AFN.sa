
# f state -> char -> state
f s a = case s of
  0 -> case a of
    'a' -> 0 ;
    'b' -> 0 ? 1 ;;
  1 -> case a of
    'a' -> 2 ;;;

accept' f s as = case as of
  Nil       -> s == 2 ;
  Cons a as -> accept' f (f s a) as ;;

accept f as = accept' f 0 as ;

# unsafeResults (accept <#> f <#> (convert "ba"))
